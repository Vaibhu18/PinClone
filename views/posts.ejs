<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Posts</title>
    <link rel="stylesheet" href="/stylesheets/posts.css" />
  </head>
  <style></style>
  <body>
    <div class="header">
      <div class="container">
        <div class="logo">
          <img src="/images/pin_logo.png" alt="" />
          <p>PinClone</p>
        </div>
        <div class="slogon">
          <p>Explore the World Through Our Images!</p>
        </div>
        <div class="button">
          <img src="<%= user.profileImage%>" alt="" />
          <a class="login" href="/profile">Profile</a>
          <a class="signup" href="/logout">Logout</a>
        </div>
      </div>
    </div>

    <div class="card-pins">
      <div class="card">
        <% posts.forEach((post)=>{ %>

        <div class="image-container">
          <img src="<%= post.image%>" alt="" />
          <button class="download-btn">Download</button>
          <div class="editor">
            <h3><%= post.user.username%></h3>
            <p><%= post.createdAt.toISOString().split('T')[0] %></p>
          </div>
        </div>

        <% }) %>
      </div>
    </div>

    <script>
      document
        .querySelector(".download-btn")
        .addEventListener("click", function () {
          const imageSrc = document.querySelector(".image-container img").src;
          const link = document.createElement("a");
          link.href = imageSrc;
          link.download = "your-image.jpg";
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
        });
    </script>
  </body>
</html>
